{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "author": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "publisher": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::publisher.publisher",
      "inversedBy": "products"
    },
    "price": {
      "type": "decimal"
    },
    "subtitle": {
      "type": "string"
    },
    "availability": {
      "type": "enumeration",
      "enum": [
        "In Stock",
        "Out of Stock",
        "Pre-order"
      ]
    },
    "Formats": {
      "type": "enumeration",
      "enum": [
        "Hardcover",
        "Paperback",
        "eBook",
        "Audiobook"
      ]
    }
  }
}
